{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"]
    },
    "target": "ES2015",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*"]
}
